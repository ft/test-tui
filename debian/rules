#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
# export DH_VERBOSE=1

%:
	dh $@

override_dh_clean:
	dh_clean
	cd doc && $(MAKE) clean && cd ..

override_dh_auto_configure:
	cd doc && $(MAKE) html && cd ..
	cd doc && $(MAKE) man && cd ..

override_dh_auto_install:
	dh_auto_install
	mkdir -p debian/libtest-tui-perl/usr/share/perl5/
	mkdir -p debian/libtest-tui-perl/usr/share/doc/libtest-tui-perl/examples/
	cp -a perl/Test/ debian/libtest-tui-perl/usr/share/perl5/
	cp example-script debian/libtest-tui-perl/usr/share/doc/libtest-tui-perl/examples/
	cp doc/*.html doc/*.css debian/libtest-tui-perl/usr/share/doc/libtest-tui-perl/
