# -*- mode: cperl -*-

use TestTUI;

testtuiset { trace => 1 };

application_under_test qw{ aumix };

my $time = 1000;

test_script [
    { until => { string => "aumix",
                 line => 1,
                 length => 5 } },
    "+++",
    { wait => $time },
    "---",
    { wait => $time },
    "+",
    { wait => $time },
    "+",
    { wait => $time },
    "-",
    { wait => $time },
    "-",
    { wait => $time },
    "q",
    { programexit => 0 } ];

run_test_script;
